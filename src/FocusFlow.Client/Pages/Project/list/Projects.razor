@page "/projects"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using FocusFlow.Client.Services
@using FocusFlow.Client.Core.Models.Projects
@using FocusFlow.Client.Commons.OverlayPanel
@using FocusFlow.Client.Pages.Project.Create
@using FocusFlow.Client.Pages.Project.Edit
@using FocusFlow.Client.Pages.Project.Detail
@inject ProjectClientService ProjectClientService

<div class="projects-container">
    <header class="page-header">
        <div class="header-content">
            <div class="header-left">
                <h1 class="page-title">Projects</h1>
                <p class="page-subtitle">Manage and organize your project portfolio</p>
            </div>
            <div class="header-actions">
                <button class="btn-primary" type="button" @onclick="OpenCreatePanel">
                    <i class="fa-solid fa-plus"></i>
                    <span>New Project</span>
                </button>
            </div>
        </div>
    </header>

    <div class="content-section">
        @if (projects is null)
        {
            <div class="loading-state">
                <i class="fa-solid fa-spinner fa-spin"></i>
                <span>Loading projects...</span>
            </div>
        }
        else if (!projects.Any())
        {
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fa-solid fa-folder-open"></i>
                </div>
                <h3>No projects yet</h3>
                <p>Get started by creating your first project</p>
                <button class="btn-primary" type="button" @onclick="OpenCreatePanel">
                    <i class="fa-solid fa-plus"></i>
                    <span>Create Project</span>
                </button>
            </div>
        }
        else
        {
            <div class="projects-grid">
                @foreach (var project in projects)
                {
                    <div class="project-card" @onclick="() => OpenDetailPanel(project.Id)">
                        <div class="card-header">
                            <div class="card-title-section">
                                <h3 class="card-title">@project.Name</h3>
                                @if (!string.IsNullOrWhiteSpace(project.Description))
                                {
                                    <p class="card-description">@project.Description</p>
                                }
                                else
                                {
                                    <p class="card-description empty">No description provided</p>
                                }
                            </div>
                            <div class="card-actions" @onclick:stopPropagation="true">
                                <button class="btn-icon" @onclick="() => OpenEditPanel(project.Id)" title="Edit">
                                    <i class="fa-solid fa-pen"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<!-- Overlay Panels -->
<OverlayPanel IsVisible="@showCreatePanel" Title="Create New Project" OnClose="CloseCreatePanel">
    <CreateProject OnProjectCreated="HandleProjectCreated" OnCancel="CloseCreatePanel" />
</OverlayPanel>

<OverlayPanel IsVisible="@showEditPanel" Title="Edit Project" OnClose="CloseEditPanel">
    @if (selectedProjectId.HasValue)
    {
        <EditProject ProjectId="@selectedProjectId.Value" OnProjectUpdated="HandleProjectUpdated" OnCancel="CloseEditPanel" />
    }
</OverlayPanel>

<OverlayPanel IsVisible="@showDetailPanel" Title="Project Details" OnClose="CloseDetailPanel">
    @if (selectedProjectId.HasValue)
    {
        <ProjectDetailView ProjectId="@selectedProjectId.Value" 
                          OnEdit="() => SwitchToEdit()" 
                          OnDelete="HandleProjectDeleted"
                          OnClose="CloseDetailPanel" />
    }
</OverlayPanel>

@code {
    private List<ProjectSimpleDto>? projects;
    private long? selectedProjectId;
    
    private bool showCreatePanel = false;
    private bool showEditPanel = false;
    private bool showDetailPanel = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadProjects();
    }

    private async Task LoadProjects()
    {
        projects = await ProjectClientService.GetAll();
    }

    private void OpenCreatePanel()
    {
        showCreatePanel = true;
    }

    private void CloseCreatePanel()
    {
        showCreatePanel = false;
    }

    private async Task HandleProjectCreated(ProjectDetailDto project)
    {
        CloseCreatePanel();
        await LoadProjects();
        StateHasChanged();
    }

    private void OpenEditPanel(long projectId)
    {
        selectedProjectId = projectId;
        showEditPanel = true;
    }

    private void CloseEditPanel()
    {
        showEditPanel = false;
        selectedProjectId = null;
    }

    private async Task HandleProjectUpdated(ProjectDetailDto project)
    {
        CloseEditPanel();
        await LoadProjects();
        StateHasChanged();
    }

    private void OpenDetailPanel(long projectId)
    {
        selectedProjectId = projectId;
        showDetailPanel = true;
    }

    private void CloseDetailPanel()
    {
        showDetailPanel = false;
        selectedProjectId = null;
    }

    private void SwitchToEdit()
    {
        showDetailPanel = false;
        showEditPanel = true;
    }

    private async Task HandleProjectDeleted()
    {
        CloseDetailPanel();
        await LoadProjects();
        StateHasChanged();
    }
}
